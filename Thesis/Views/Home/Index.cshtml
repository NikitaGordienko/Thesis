@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@{
    Layout = "_Layout";
    ViewData["Title"] = "Главная страница";
}
<main class="mainpage">
    <div class="container">
        <div class="mainpage-title"><span>WinnerStays</span></div>
        <div class="mainpage-description">Сервис для поиска спортивных площадок<br /> и единомышленников для занятий спортом</div>
    </div>
    <div class="mainpage-activities-bg"></div>
    <div class="container">
        <div class="mainpage-search clearfix">
            <div class="mainpage-search-left">
                <a asp-controller="Map" asp-action="Index">Карта</a>
            </div>
            <div class="mainpage-search-right">
                <a asp-controller="Filter" asp-action="Index">Фильтр</a>
            </div>
        </div>
    </div>
</main>
