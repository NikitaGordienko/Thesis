@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model Thesis.Models.SignupModel;
@{
    Layout = "_AuthLayout";
    ViewData["Title"] = "Регистрация";
}
<form method="post" asp-controller="Auth" asp-action="Signup" class="auth-form signup-form">
    <div class="auth-form-logo">
        <a href="~/Home/Index" title="Главная"></a>
    </div>
    <div asp-validation-summary="All"></div>
    <div class="signup-form-wrap clearfix">
        <div class="signup-form-left">
            <div class="auth-form-field signup-login">
                <div class="auth-form-label">Логин</div>
                <input type="text" asp-for="Login" >
                <span asp-validation-for="Login"></span>
            </div>
            <div class="auth-form-field signup-name">
                <div class="auth-form-label">Имя</div>
                <input type="text" asp-for="Name" >
                <span asp-validation-for="Name"></span>
            </div>
            <div class="auth-form-field signup-name">
                <div class="auth-form-label">Фамилия</div>
                <input type="text" asp-for="Surname" >
                <span asp-validation-for="Surname"></span>
            </div>
        </div>
        <div class="signup-form-right">
            <div class="auth-form-field signup-login">
                <div class="auth-form-label">Пароль</div>
                <input type="password" asp-for="Password" >
                <span asp-validation-for="Password"></span>
            </div>
            <div class="auth-form-field signup-name">
                <div class="auth-form-label">Повторить пароль</div>
                <input type="password" asp-for="ConfirmPassword" >
                <span asp-validation-for="ConfirmPassword"></span>
            </div>
            <div class="auth-form-field signup-name">
                <div class="auth-form-label">E-mail <span class="signup-field-info"></span></div>
                <input type="text" asp-for="Email" >
                <span asp-validation-for="Email"></span>
            </div>
        </div>
    </div>


    <div class="auth-form-submit">
        <input type="submit" class="auth-submit-button signup-submit-button" value="Зарегистрироваться">
    </div>
    <div class="auth-link">
        <a href="~/Auth/Signin">Авторизация</a>
    </div>
</form>